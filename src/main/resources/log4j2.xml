<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="log-path">logs</Property>
        <Property name="archive">${log-path}/archive</Property>
        <Property name="file-name">${log-path}/fileLog.log</Property>
    </Properties>
    <Appenders>
        <RollingFile name="RollingFile-Appender" fileName="${log-path}/logFile.log"
                     filePattern="${log-path}/$${date:yyyy-MM}/logFile-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>[%-4level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="ru.eleron.osa.lris.schedule" level="all">
            <AppenderRef ref="RollingFile-Appender"/>
        </Logger>
    </Loggers>
</Configuration>